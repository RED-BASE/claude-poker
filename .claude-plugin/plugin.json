{
  "name": "claude-poker",
  "displayName": "Claude Poker",
  "description": "Autonom-ish AI poker player with voice I/O and trash talk",
  "version": "1.0.0",
  "author": "Cassius Oldenburg (RED_CORE)",
  "repository": "https://github.com/RED-BASE/claude-poker",
  "license": "MIT",
  "keywords": ["poker", "ai", "voice", "game", "autonomous"],
  "category": "Games",

  "mcpServers": {
    "claude-poker": {
      "command": "python3",
      "args": ["poker-mcp-server.py"]
    }
  },

  "hooks": {
    "session-start": "bash hooks/start-web-server.sh"
  },

  "commands": {
    "poker-status": {
      "description": "Check poker system status",
      "script": "bash hooks/status.sh"
    }
  }
}
